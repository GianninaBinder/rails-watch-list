

<div class="card-category" style="background-image: url(<%= cl_image_path @list.photo.key%>)">
  <h2><%= @list.name.capitalize %></h2>
  <div>
    <%= link_to "Go back to lists", root_path, class: "btn btn-primary my-3"%>
  </div>
</div>

<div class="container m-5">
  <div class="d-flex justify-content-between align-items-center my-5">
    <h2>Movies</h2>
    <%= link_to "add new bookmark", new_list_bookmark_path(@list), class: "btn btn-primary btn-sm my-3" %>
  </div>

  <div class="row">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="col card mx-3" style="width: 18rem">
        <img class="img-fluid"src= <%= bookmark.movie.poster_url%> >
          <div class="card-body">
            <h5 class="card-title"><%= bookmark.movie.title %></h5>
            <p class="card-text"><%= bookmark.movie.overview %></p>
            <p class="card-text"><%= bookmark.movie.rating %> Stars</p>
            <p class="card-text bg-light p-3">Your comment- "<%= bookmark.comment %>"</p>
          </div>
      </div>
    <% end %>
  </div>
</div>
